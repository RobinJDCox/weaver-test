<idea-plugin>
    <id>com.disneystreaming.weaver</id>
    <name>Weaver Test</name>
    <version>2020.2.2</version>
<!--    <idea-version since-build="193.3519.25" until-build="194.0" />-->
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
        Adds support for the scala testframework Weaver
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.intellij.scala</depends>

    <extensions defaultExtensionNs="com.intellij">
        <runConfigurationExtension
                implementation="org.jetbrains.plugins.scala.testingSupport.test.WeaverTestRunConfigurationExtension"/>
        <runConfigurationProducer
                implementation="org.jetbrains.plugins.scala.testingSupport.test.WeaverTestConfigurationProducer"/>
        <configurationType
                implementation="org.jetbrains.plugins.scala.testingSupport.test.WeaverTestConfigurationType"/>
        <testFramework implementation="org.jetbrains.plugins.scala.testingSupport.test.WeaverTestFramework"/>

        <runLineMarkerContributor implementationClass="org.jetbrains.plugins.scala.testingSupport.test.WeaverTestRunLineMarkerProvider" language="Scala"/>
        <!-- Add your extensions here -->
    </extensions>
</idea-plugin>